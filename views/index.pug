doctype html
html(lang="ja")

  head
    title= 'NICE BULK'
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel='icon', href='/images/favicon.ico')
    // CSS
    link(rel='stylesheet', href='/css/reset.css')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/uikit.min.css')
    // JS
    script(src='/js/uikit.min.js')
    script(src='/js/main.js')

  body.body
    div.uk-inline

      div.uk-overlay.uk-position-top-left
        a.link(href='/') NICE BULK

      img.background-img(src='images/background.jpg', alt='')

      if result
        div.uk-overlay.uk-position-center.uk-text-center
          div.uk-margin-bottom
            span.result-text #{result}%
          div
            a.button.uk-button(href='/') 再測定
      else
        form(action='/image-recognition', method='POST', enctype='multipart/form-data')
          div.uk-overlay.uk-position-center.uk-text-center
            div.uk-margin-bottom
              span.msg.uk-text-middle 測定する画像を選択してください
            div(uk-form-custom='target: true')
              input(type='file', name='image-model')
              input.uk-input.uk-form-width-medium(type='text', placeholder='画像を選択', disabled='')
            button.button.uk-button 測定